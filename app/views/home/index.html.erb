<h2><%= link_to 'new user', new_user_path %></h2>
<br>
<h2>print all users</h2>
<div class="container">
    <div class="row">
        <% @users.each do |p|%>
            <div class="col-md-3">
                <div class="row">
                    <div class="col-6">
                        <%= image_tag p.avatar, class: "img" %>
                    </div>
                    <div class="col-6">
                        <%= p.name %>
                        <br>
                        <%= link_to 'edit' , edit_user_path(p) %>
                        <%= button_to 'delete' , user_path(p), method: :delete %>
                    </div>
                </div>
            </div>
        <%end%>
    </div>
</div>
